<div class="main-container">
    <div id="mySidebar" class="sidebar">
        <form method="post">
            <div class="field">
                <p>Rentang Waktu</p>
                <label for="timestart">Dari</label>
                <div class="control">
                    <input type="text" class="input" name="timestart" id="timestart" placeholder="Dari">
                </div>
            </div>
            <div class="field">
                <label for="timeend">Sampai</label>
                <div class="control">
                    <input type="text" class="input" name="timeend" id="timeend" placeholder="Sampai">
                </div>
            </div>
            <button type="submit" class="button is-light" id="submitfilter">Submit</button>
        </form>
    </div>
    <div id="map" style="width: 100%; height: 100%;"></div>
</div>

